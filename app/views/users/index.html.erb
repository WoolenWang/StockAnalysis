<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Encrypted passwd</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Qq</th>
    <th>Description</th>
    <th>Group name</th>
    <th>Group</th>
    <th>Last login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.encrypted_passwd %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.qq %></td>
        <td><%= user.description %></td>
        <td><%= user.group_name %></td>
        <td><%= user.group_id %></td>
        <td><%= user.last_login %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

