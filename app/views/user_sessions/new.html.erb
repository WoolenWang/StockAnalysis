		<div id="error_explanation">
		    <h2><%= pluralize(@user_session.errors.count, "error") %> 条错误信息:</h2>
		    <ul>
			<% @user_session.errors.full_messages.each do |msg| %>
			    <li><%= msg %></li>
			<% end %>
		    </ul>
		</div>
	    <% end %>
